<li  class="comment">
	<article  class="comment-body">
		<footer class="comment-meta">
			<div class="comment-author vcard">
				<img alt="" src="{%AVATAR%}" class="avatar" height="70" width="70">						
				<b class="fn">{%NAME%} </b><span class="says">сказал:</span>	
			</div>
			<div class="comment-metadata smallPart">{%WEBSITE%}<br>{%REPLY_FLAG%}</div>
		</footer>
		<div class="comment-content">
			<p>{%COMMENT%}</p>
			[reply]
			<hr>
			<b>Ответ:</b>
			<p>{%REPLY%}</p>
			[/reply]
		</div>
		<div class="reply">
			<a class="comment-reply-link">
				<span class="smallPart">{%DATE%}<i class="fa fa-calendar spaceLeft"></i></span>
			</a>
		</div>
	</article>
</li>
	


						