<article class="hentry">
	<header class="entry-header">
		<h1 class="entry-title">[more]{%TITLE%}[/more]</h1>
		<div class="entry-meta">
				<span class="posted-on">
					<i class="fa fa-clock-o spaceRight"></i>					
					<time class="entry-date published" datetime="{%DATE%}">{%DATE%}</time>					
				</span>
				<span class="byline"> 
					<i class="fa fa-user spaceRight" aria-hidden="true"></i>
					<span class="author vcard">[lang:_AUTHOR]: {%AUTHOR%}</span>
				</span>
				[category]
				<span class="cat-links smallPart">
					<i class="fa fa-folder-open spaceRight" aria-hidden="true"></i>
					{%CATEGORY%}
				</span>
				[/category]
				<span class="comments-link">
					<i class="fa fa-comments-o spaceRight" aria-hidden="true"></i>
					[lang:_COMMENTS]: {%COMMENTS%}
				</span>	
		</div>
	</header>
	<div class="entry-featuredImg">
		[more]
			<span class="overlay-img"></span>
			[mini_img][img:0][/mini_img]
		[/more]
	</div>
	
	<div class="entry-summary">
				<div class="crestaPostStripeInner">
			<i class="fa fa-lg fa-pencil"></i>
		</div>
				
