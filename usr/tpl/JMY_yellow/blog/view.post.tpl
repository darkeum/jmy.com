<article class="hentry">
	<header class="entry-header">
		<h1 class="entry-title"><span class="blogName">{%BLOG_NAME%}</span></h1>
		<h3 class="entry-title"><span class="postTitle">{%POST_TITLE%}</span></h3>
			<div class="entry-meta smallPart">
				<span class="posted-on">
					<i class="fa fa-calendar spaceRight" aria-hidden="true"></i>					
					<time class="entry-date published" datetime="{%DATE%}">{%DATE%}</time>					
				</span>				
				<span class="cat-links smallPart">
					<i class="fa fa-user spaceRight" aria-hidden="true"></i>
					{%USER%}
				</span>
				<span class="comments-link">
					<i class="fa fa-comments-o spaceRight" aria-hidden="true"></i>
					[lang:_COMMENTS]: {%COMMENTS%}
				</span>	
				<span class="posted-on"> 
					<i class="fa fa-star spaceRight" aria-hidden="true"></i>
					<span class="author vcard">{%RATING%}</span>
				</span>
			</div>
	</header>		
	<div class="entry-summary">					
		<p>{%STATUS%}{%TEXT%}</p>				
	</div>
	<footer class="entry-footer smallPart">{%ADMIN%}</footer>
</article>